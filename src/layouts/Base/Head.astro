---
import config from '../../../site-config.js'
import { SEO } from '@splendidlabz/astro'
import Favicon from './Favicon.astro'

const { bodyClass = '', ...props } = Astro.props
---

<SEO site={config.siteSEO} {...props} />
<Favicon />

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />

<!-- Fonts -->
<link rel="stylesheet" href="https://use.typekit.net/pki5tfy.css" />

<!-- RSS Auto discovery -->
<link
  rel="alternate"
  type="application/rss+xml"
  title="Feed for articles"
  href={new URL('rss.xml', Astro.site)}
/>

<!-- Sitemap -->
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Google Tag Manager -->
<script async>
  ;(function (w, d, s, l, i) {
    w[l] = w[l] || []
    w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
    const f = d.getElementsByTagName(s)[0]
    const j = d.createElement(s)
    const dl = l != 'dataLayer' ? '&l=' + l : ''
    j.async = true
    j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
    f.parentNode.insertBefore(j, f)
  })(window, document, 'script', 'dataLayer', 'GTM-5FDGFC8')
</script>
<!-- End Google Tag Manager -->
